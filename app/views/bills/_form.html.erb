
<%= simple_form_for(@bill) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :custname %>
    <%= f.input :billno %>
    <%= f.input :billdt %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
